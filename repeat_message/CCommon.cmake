FUNCTION(IsCompile is_exe)
	SET(CMAKE_CXX_STANDARD 17)
	IF(MSVC)
		MESSAGE(STATUS ----CompileType:MSVC IsExe:${is_exe})
		SET(CMAKE_CXX_FLAGS_RELEASE "/MT" PARENT_SCOPE)
		SET(CMAKE_CXX_FLAGS_DEBUG "/MTd" PARENT_SCOPE)
		IF(${is_exe} STREQUAL "true")
			SET(CMAKE_EXE_LINKER_FLAGS "${CMAKE_EXE_LINKER_FLAGS} /SUBSYSTEM:WINDOWS" PARENT_SCOPE)
		ENDIF()
	ELSEIF(CMAKE_COMPILER_IS_GNUCXX)
		MESSAGE(STATUS ----CompileType:GNUCXX IsExe:${is_exe})
		IF(${is_exe} STREQUAL "true")
			ADD_COMPILE_OPTIONS(-g -Wall)
		ELSE()
			ADD_COMPILE_OPTIONS(-g -Wall -fPIC)
		ENDIF()
	ELSEIF(CMAKE_COMPILER_IS_GNUCXX)
		MESSAGE(STATUS "----CompileType:GNUCC")
	ELSE()
		MESSAGE(STATUS "----CompileType:Unknown")
	ENDIF()

ENDFUNCTION()


FUNCTION(IsBit)
	IF(CMAKE_SIZEOF_VOID_P EQUAL 8)
		MESSAGE(STATUS "----SystemBit:x64")
	ELSEIF(CMAKE_SIZEOF_VOID_P EQUAL 4)
		MESSAGE(STATUS "----SystemBit:x32")
	ENDIF()

ENDFUNCTION()

FUNCTION(SetSetting bin_path)
	MESSAGE(STATUS ----BinPath:${bin_path})
	SET(EXECUTABLE_OUTPUT_PATH ${bin_path} PARENT_SCOPE)
	SET(CMAKE_ARCHIVE_OUTPUT_DIRECTORY ${bin_path} PARENT_SCOPE)
	IF(MSVC)
		SET(CMAKE_RUNTIME_OUTPUT_DIRECTORY ${bin_path} PARENT_SCOPE)
		SET(CMAKE_PDB_OUTPUT_DIRECTORY ${binPath} PARENT_SCOPE)
	ELSEIF(CMAKE_COMPILER_IS_GNUCXX)
		SET(CMAKE_LIBRARY_OUTPUT_DIRECTORY ${bin_path} PARENT_SCOPE)
	ENDIF()
ENDFUNCTION()

FUNCTION(BinaryAttribute src_name target_name prefix_name suffix_name)
	SET_TARGET_PROPERTIES(${src_name} PROPERTIES OUTPUT_NAME ${target_name})
	IF(${prefix_name} STREQUAL "none")
		SET_TARGET_PROPERTIES(${src_name} PROPERTIES PREFIX "")
	ELSE()
		SET_TARGET_PROPERTIES(${src_name} PROPERTIES PREFIX ${prefix_name})
	ENDIF()
	IF(NOT ${suffix_name} STREQUAL "none")	
		SET_TARGET_PROPERTIES(${src_name} PROPERTIES SUFFIX ${suffix_name})		
	ENDIF()
ENDFUNCTION() 


